<resources>

    <style name="app_theme_base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="app_theme" parent="app_theme_base">
        <!--<item name="android:windowLightStatusBar">false</item>-->
    </style>

    <style name="app_theme_bootstrap_activity" parent="app_theme_base">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="app_theme_toolbar" parent="app_theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="app_theme_settings" parent="app_theme_base">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="primary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="secondary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cell_big_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cell_big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="cell_primary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cell_primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="cell_secondary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cell_secondary_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cell_tertiary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">@dimen/cell_tertiary_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="primary_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="app_theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="app_theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>