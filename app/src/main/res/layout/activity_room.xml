<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <com.alamkanak.weekview.WeekView
            android:id="@+id/activity_room_week_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginRight="@dimen/spacing_eight"
            android:background="@color/background"
            app:todayHeaderTextColor="@color/accent"
            app:todayBackgroundColor="@color/background"
            app:timeColumnTextColor="@color/primary_text"
            app:headerRowTextColor="@color/primary_text"
            app:headerRowPadding="@dimen/spacing_twelve"
            app:headerRowBackgroundColor="@color/background"
            app:timeColumnBackgroundColor="@color/background"
            app:dayBackgroundColor="@color/background"
            app:eventTextColor="@android:color/white"
            app:eventCornerRadius="@dimen/spacing_four"
            app:eventTextSize="@dimen/cell_tertiary_text_size"
            app:hourHeight="@dimen/spacing_fiftysix"
            app:numberOfVisibleDays="1"
            app:xScrollingSpeed="0.0" />
    </RelativeLayout>
</layout>